<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.thebaileybrew.sandwichstudio.DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_top_margin_8dp"
        android:layout_marginLeft="@dimen/standard_top_margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/image_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/detail_description_label"
        android:textSize="@dimen/standard_bold_text_22sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/description_tv"
        style="@style/SandwichStyleText"
        app:layout_constraintTop_toBottomOf="@id/description_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/also_known_as_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_top_margin_8dp"
        android:layout_marginLeft="@dimen/standard_top_margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/description_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/detail_also_known_as_label"
        android:textSize="@dimen/standard_bold_text_22sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/also_known_tv"
        style="@style/SandwichStyleText"
        app:layout_constraintTop_toBottomOf="@id/also_known_as_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/origins_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_top_margin_8dp"
        android:layout_marginLeft="@dimen/standard_top_margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/also_known_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/detail_place_of_origin_label"
        android:textSize="@dimen/standard_bold_text_22sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/origin_tv"
        style="@style/SandwichStyleText"
        app:layout_constraintTop_toBottomOf="@id/origins_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/ingredients_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_top_margin_8dp"
        android:layout_marginLeft="@dimen/standard_top_margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/origin_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/standard_bold_text_22sp"
        android:text="@string/detail_ingredients_label"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/ingredients_tv"
        style="@style/SandwichStyleText"
        app:layout_constraintTop_toBottomOf="@id/ingredients_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>



</ScrollView>
